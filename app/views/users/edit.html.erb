<%= render "shared/header"%>

<%= form_for(current_user) do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

  <h2 class='title'><%= @nickname %> さんのプロフィール編集</h2>
  <div class='form-wrap'>
    
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
      </div>
      <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) ウーロン", maxlength:"10", autofocus: true %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="form-select">
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"user-prefecture"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">市区町村</label>
      </div>
      <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
    </div>

    <div class="form-select">
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"user-sex"}) %>
      <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
    </div>

    <div class='register-btn'>
      <%= f.submit "更新する" ,class:"reg-btn" %>
    </div>

  </div>
<% end %>